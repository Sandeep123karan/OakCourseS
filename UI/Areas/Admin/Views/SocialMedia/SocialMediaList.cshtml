
@{
    ViewBag.Title = "SocialMediaList";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@Model List<DTO.MetaDTO>
    <section class="content-header">
        <h1>Meta List</h1>
        <ol class="breadcrumb float-sm-left">
            <li class="breadcrumb-item"><a>Admin</a></li>
            <li class="breadcrumb-item"><a>Social Media</a></li>
            <li class="breadcrumb-item"><a>Social Media List</a></li>
        </ol>
    </section>
    <br />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary" onclick="window.location.href='/Admin/SocialMedia/AddSocialMedia'" >Add Social Media</button>
    </div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">DataTable with default features</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">


            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Link</th>
                        <th>Image</th>
                        <th>Update</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                @foreach (var item in Model)

                {
                    <tbody>
                        <tr id="a_@item.ID">
                            <td>@item.Name</td>
                            <td>
                                @item.Link
                            </td>
                            <td>
                                <img src="~/Areas/Admin/Content/SocialMediaImages/@item.ImagePath" width="60" height="40" />

                            </td>
                            <td align="center" valign="middle">
                                <a href="/Admin/SocialMedia/UpdateSocialMedia/@item.ID">

                                    <br />
                                    <img src="~/Areas/Admin/Content/icons/icons8-update-64.png" />

                                </a>
                            </td>

                            <td align="center" valign="middle">
                                <a href="#">

                                    <br />
                                    <img src="~/Areas/Admin/Content/icons/icons8-delete-30.png" />
                                </a>
                            </td>
                            <td> 4</td>
                            <td>X</td>
                        </tr>

                    </tbody>

                }

                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Meta Content</th>
                        <th>Image</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
            </table>

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->


